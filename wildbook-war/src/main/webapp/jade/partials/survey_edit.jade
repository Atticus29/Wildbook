form.form.ng-cloak(novalidate, ng-controller="SurveyEditController", ng-show="panels['survey_edit']", wb-key-handler-form)
    .form-row
        legend.form-group Add a Survey
    .form-row
        fieldset
            legend.form-group Survey
            .form-group.col-md-6
                label.control-label Organization:
                select.form-control(ng-options="org.displayName for org in main.config.orgs track by org.orgId"
                                    ng-model="data.survey.organization", ng-change="orgChange()")
                    option(value="") --- select one ---
            .form-group.col-md-6
                label.control-label Survey Number:
                input.form-control(type="text", ng-model="data.survey.surveyNumber")
    .form-row
        fieldset
            legend.form-group Track
            .form-group.col-md-6
                label.control-label Vessel:
                select.form-control(ng-options="vessel.displayName for vessel in info.vessels track by vessel.vesselId"
                                    ng-model="data.track.vessel")
                    option(value="") --- select one ---
            .form-group.col-md-6
                label.control-label Code:
                input.form-control(type="text", ng-model="data.track.code")
            .form-group.col-md-4
                label.control-label Date:
                date-input.form-control(ng-model="data.track.partDate")
            .form-group.col-md-4
                label.control-label Start Time:
                time-input.form-control(ng-model="data.track.starttime")
            .form-group.col-md-4
                label.control-label End Time:
                time-input.form-control(ng-model="data.track.endtime")
    .form-row
        fieldset(location="data.track.location", location-edit)
    .form-row
        fieldset
            .form-group.col-md-12
                label.control-label Comments:
                input.form-control(type="textarea", rows="4", ng-model="data.track.comments")
    .form-row
        input(type="submit", ng-click="save()", value="Save")
script(src="javascript/controllers/survey_edit.js")
