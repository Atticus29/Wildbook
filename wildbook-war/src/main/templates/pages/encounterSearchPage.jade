div
    legend Encounter Search
    wb-encounter-search(search-encounter-done="searchEncounterDone(encounter)" reset-selected-result="reset()")
    div(ng-if="encdata")
        div(layout="row" layout-margin layout-align="start center")
            div 
                h4 Encounter
            md-icon.ml-10.mr-10(md-svg-icon="pencil" ng-if="encdata && ! mode_edit" ng-click="edit()" ng-disabled="mode_edit")
                md-tooltip(md-direction="bottom") Edit
        md-divider
        wb-encounter-view(ng-if="encdata && ! mode_edit" enc-data="encdata")
        wb-encounter-edit(ng-if="encdata && mode_edit"
                          enc-data="encdata"
                          edit-encounter-done="editEncounterDone(encdata)")
