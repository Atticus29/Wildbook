#!/bin/bash

VENDORS="--exclude=tools --exclude=bcomponents"
classes=false
cust=
while [[ $# > 0 ]]
do
    key="$1"
    case $key in
        -v|--vendors)
        VENDORS=""
        shift
        ;;
        -C|--classes)
        classes=true
        shift
        ;;
        -c|--cust)
        cust="$2"
        shift
        ;;
        *)
        # unknown option
        ;;
    esac
    shift
done

rsync -rv $VENDORS --exclude=WEB-INF --exclude=xcalendar --exclude=onlinehelp --exclude=images --exclude=software src/main/webapp/ $TOMCAT_HOME/webapps/wildbook

if [ "$classes" = true ] ; then
    mvn compile -o
    rsync -rv target/classes/org/ $TOMCAT_HOME/webapps/wildbook/WEB-INF/classes/org
fi

#
# Get cust resources copied over.
#
if [ ! -z "$cust" ]; then
    mvn compile -o -Dwildbook.cust=${cust}
    rsync -rv target/classes/ $TOMCAT_HOME/webapps/wildbook/WEB-INF/classes
fi