form.form.form-horizontal.ng-cloak(novalidate, ng-controller="EncounterFormController", ng-show="encounter")
    legend Encounter
    input(type="hidden", ng-model="encounter.encounterid")
    input(type="hidden", ng-model="encounter.individualid")
    .form-group
        label.control-label Name:
        input.form-control(type="date", ng-model="encounter.encdate")
    .form-group
        label.control-label Latitude:
        input.form-control(type="text", ng-model="encounter.location.latitude")
    .form-group
        label.control-label Longitude:
        input.form-control(type="text", ng-model="encounter.location.longitude")
    .form-group
        label.control-label Submitter:
        input.form-control(type="text", ng-model="encounter.submitter")
    .form-group
        labe.control-labell Location ID:
        input.form-control(type="text", ng-model="encounter.location.locationid")
    .form-group
        label.control-label Verbatim Location:
        input.form-control(type="text", ng-model="encounter.location.verbatimLocation")

    input(type="submit", ng-click="update(encounter)", value="Save")
