link(rel='stylesheet', href="tools/datatables/css/datatables.min.css")
link(rel='stylesheet', href="css/mediaSubmitAdmin.css")

div(ng-controller="MediaSubmissionController")
    div(ng-show="!submission")
        h1 Media Submissions
        table#mstable.table.table-striped.table-bordered

    div.ng-cloak(ng-show="submission")
        h2 Edit Media Submission
        h3.text-primary {{submission.user.displayName}}
        button.btn.btn-primary(ng-click="doneEditing()") Done
        button.btn.btn-danger.pull-right(ng-click="deleteSubmission()") Delete
        table#imagetable.table.table-striped.table-bordered

script(type="text/ng-template", id="zoomimage.html")
    .modal-body
        img.image-zoom(src="{{zoomimage}}")
    .modal-footer
        button.btn.btn-primary(ng-click="cancel()") Close

script(src="bcomponents/angular/angular.js")
script(src="bcomponents/angular-bootstrap/ui-bootstrap-tpls.js")
script(src="bcomponents/moment/moment.js")
script(src="tools/datatables/js/datatables.min.js")
script(src="javascript/media/mediaSubmitAdmin.js")
