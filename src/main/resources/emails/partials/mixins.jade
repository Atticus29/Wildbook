//- mixins
mixin tablebody()
    table.body
        tr
            td.center(align="center", valign="top")
                center
                    block

mixin container()
    table.container
        tr
            td
                block

mixin outerrow(class)
    table.row(class=class)
        tr
            td.wrapper.last
                block

mixin innerrow()
    table.row
        tr
            block

mixin wrapper(panel)
    table.wrapper
        tr
            if(panel == 'panel')
                td.panel
                    block
            else
                td
                    block

mixin column(padding)
    table
        tr
            if(padding == 'padding')
                td.text-pad
                    block
            else
                td
                    block
            +expander()

mixin expander()
    td.expander

mixin centeredbutton(content, href)
    table.row.no-padding
        tr
            td.wrapper.last
                table.columns.twelve
                    tr
                        td.sub-column.three
                        td.sub-column.six.pad-button
                            table.button.radius.medium-button
                                tr
                                    td.pad-button
                                        a(href="#{href}")= content
                        td.sub-column.three
                        +expander
                block

mixin submission(src, date, location, items)
    div.submission
        img(src="#{src}", width=550, alt="Your Submission")
        div.submission-content
            if(date)
                div
                    b Sighted on: 
                    span= date
            if(location)
                div
                    b Location: 
                    span= location
            if(items)
                div
                    b Media Items You Submitted: 
                    span= items
        div(style="clear: both;")

mixin match(src1, src2, name)
    table.row
        tr
            td.wrapper.last
                table.columns.twelve
                    tr
                        td.sub-column.six.center.middle
                            img(src="#{src1}", alt="Your Submission")
                        td.sub-column.six.center.middle.last
                            img(src="#{src2}", alt="Recent Match")
                        +expander
    table.row
        tr
            td.wrapper.last
                table.columns.twelve
                    tr
                        td.sub-column.six.center.top
                            b Your Submission
                        td.sub-column.six.center.last.top
                            b=name
                        +expander
