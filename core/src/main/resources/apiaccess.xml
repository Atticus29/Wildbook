<?xml version="1.0"?>
<!--
"properties" really refers to getter/setter availability, e.g. standard getFooBar and setFooBar  (which would be property "fooBar", note lowercase)
"read" is always on for a property unless defined here.  "update" is always off unless explicitely set on.
NOTE: "admin" role always can do anything
-->
<access>
	<classes>
		<class name="org.ecocean.Encounter">
			<object>
				<create>
					<role>*</role>
				</create>
				<update>
					<role>admin</role>
					<role>test</role>
				</update>
				<delete>
					<role>admin</role>
				</delete>
			</object>
			<properties>
				<property name="location">
					<update>
						<role>admin</role>
						<role>test</role>
					</update>
				</property>
				<property name="sex">
					<update>
						<role>test</role>
					</update>
				</property>
			</properties>
		</class>
		<class name="org.ecocean.User">
			<object>
				<create>
					<role>admin</role>
				</create>
				<read>
					<role>admin</role>
				</read>
				<update>
					<role>admin</role>
				</update>
				<delete>
					<role>admin</role>
				</delete>
			</object>
		</class>
	</classes>
</access>
