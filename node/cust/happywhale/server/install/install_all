#!/bin/bash
mv /var/tmp/wildbook.dump /var/tmp/wildbook.dump.OLD
pg_dump -d wildbook -U shepherd -f /var/tmp/wildbook.dump

/opt/happywhale/install_war /var/tmp/wildbook-5.4.0-RELEASE.war
