//- login.jade
//- an angular modal masking the page for login, while keeping your place on the page
div.login-modal.page-full(ng-show="login.on")
        .container-fluid
            .row
                .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
                    div.form-group
                        label(for="login-user") Username / Email Address
                        input#login-user.login-username.form-control(ng-model="username")
                    div.form-group
                        label(for="login-pass") Password
                        input#login-pass.login-password.form-control(type="password", ng-model="password")
                        p.help-block
                            a(href="/resetpass", target="_blank") Forgot my password
                    div.form-group
        div.close-modal 
            a(ng-click="login.on = false") X