nav.navbar.navbar-inverse.navbar-fixed-top#navbar-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#main-nav")
                span.sr-only Toggle Navigation //Screen Readers
                span.icon-bar
                span.icon-bar
                span.icon-bar
        #main-nav.collapse.navbar-collapse
            ul.nav.navbar-nav
                li.home
                    a(href="/")= t("header.menu.home")
                li
                    a(href="/submitMedia")= t("header.menu.reportSighting")
                li.ng-cloak(ng-show="data.user")
                    a(href="#me")= t("header.menu.me")
                li
                    a(href="/about")= t("header.menu.about")
                li
                    .right-inner-addon.navbar-search-wrap
                        i.glyphicon.glyphicon-search
                        input.search-query.form-control.navbar-search(type="text" id="search-site" placeholder!= t("header.menu.searchSite"))
                        #search-help= t("header.menu.searchHelpNone")
                li.navbar-login.ng-cloak
                    .navbar-login-wrapper(ng-show="user")
                        p= t("header.menu.welcomeBack") + ", "
                            | {{user.fullName || user.username}}!
                        p
                            span
                                a(href="/user/{{user.username}}")= t("header.menu.gotomy")
                                =" | "
                            a(href="javascript:;", ng-click="logout()", class="navbar-logout-link")= t("header.menu.signout")
                    .navbar-logged-in-wrapper(ng-show="!user")
                        p= t("header.menu.welcomeSignIn")
                        p= t("header.menu.alreadyMember") + " | "
                            a(ng-click="login()", class="navbar-login-link")= t("header.menu.signin")
    .logo-svg#navbar-logo-right