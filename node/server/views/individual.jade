extends layout

block content
    .maincontent
        if page.error
            != JSON.stringify(page.error)
            - page.ind = []
        //else
        //    != JSON.stringify(page.ind)

        h1.has-icon.icon-happywhale= t("individual.meet", {individualId: page.ind.nickname + "(" + page.ind.id + ")"})

        if page.ind.photos
            //img.individual-main-image(src="#{config.wildbook.staticUrl}#{page.ind.photos[0]}")
    
            #individual-carousel.carousel.slide(data-ride="carousel")
                .carousel-inner
                    for photo in page.ind.photos
                        .item.active
                            img(src="#{config.wildbook.staticUrl}#{photo.url}")
                            if photo.caption
                                .carousel-caption
                                    h3 photo.caption

            <!-- Controls -->
            a.left.carousel-control(href="individual-carousel" role="button" data-slide="prev")
                span.glyphicon.glyphicon-chevron-left
            a.right.carousel-control(href="#individual-carousel" role="button" data-slide="next")
                span.glyphicon.glyphicon-chevron-right
